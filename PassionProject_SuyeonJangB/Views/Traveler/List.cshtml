@model IEnumerable<PassionProject_SuyeonJangB.Models.TravelerDto>
@{
    ViewBag.Title = "List";
}
<h2 style="margin-bottom:32px;">Traveler List</h2>
<table class="border">
    <thead>
        <tr class="bg-light">
            <th style="padding:10px; width:80%;">TravelerName</th>
            <th style="padding: 10px; width: 80%;">Edit</th>
            <th style="padding: 10px; width: 80%;">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Traveler in Model)
        {
            <tr>
                <td style="padding:10px;">
                    <a style="text-decoration:none; color:black;" href="/Journey/List/@Traveler.TravelerId">@Traveler.TravelerFirstName @Traveler.TravelerLastName</a>
                </td>
                <td style="padding:10px;">
                    <a href="/Traveler/Edit/@Traveler.TravelerId" class="btn btn-primary">Edit</a>
                </td>
                <td style="padding:10px;">
                    <a href="/Traveler/DeleteConfirm/@Traveler.TravelerId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="display:flex; justify-content:space-between;" class="mt-3">
    <a href="/Traveler/New" class="btn btn-light border border-1">New Traveler</a>
    <a href="/Destination/List" class="btn btn-light border border-1">go to List Destination</a>
</div>
