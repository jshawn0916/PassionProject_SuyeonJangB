

@{
    ViewBag.Title = "Create";
}

<h2 style="margin-bottom:32px;">Create Journey</h2>
<form action="/Journey/Create" method="POST">
    <input type="hidden" name="TravelerId" value="@ViewBag.TravelerId" />
    <div class="mb-2">
        <label style="display: block; margin-bottom: 8px; font-weight: bold;">Title:</label> <input type="text" name="JourneyTitle" />
    </div>
    <div class="mb-3">
        <label style="display: block; margin-bottom: 8px; font-weight: bold;">Explain:</label> <input type="text" name="JourneyExplain" />
    </div>
    <div class="mb-5">
        <div style="margin-bottom: 8px; font-weight: bold;">Destinations</div>
        @foreach (var destination in Model)
        {
            <div>
                <label>
                    <input type="checkbox" name="destinationIds" value="@destination.DestinationId" />
                    @destination.DestinationName
                </label>
            </div>
        }
    </div>
    <div style="display:flex; justify-content:space-between;" class="mt-3">
        <input class="btn btn-light border border-1" type="submit" value="Create Journey" />
        <a class="btn btn-light border border-1" href="/Journey/List/@ViewBag.TravelerId">Go back to Journey List</a>
    </div>
</form>

