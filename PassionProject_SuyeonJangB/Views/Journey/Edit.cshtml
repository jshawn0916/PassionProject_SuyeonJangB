@model PassionProject_SuyeonJangB.Models.ViewModels.EditJourney
@{
    ViewBag.Title = "Edit";
}


<h2 style="margin-bottom:32px;">Update Journey</h2>

<form action="/Journey/Update/@Model.SelectedJourney.JourneyId" method="POST">
    <input type="hidden" name="TravelerId" value="@Model.SelectedJourney.TravelerId" />
    <input type="hidden" name="JourneyId" value="@Model.SelectedJourney.JourneyId" />
    <div class="mb-2">
        <label style="display: block; margin-bottom: 8px; font-weight: bold;">Title:</label> <input type="text" name="JourneyTitle" value="@Model.SelectedJourney.JourneyTitle" />
    </div>
    <div class="mb-3">
        <label style="display: block; margin-bottom: 8px; font-weight: bold;">Explain:</label> <input type="text" name="JourneyExplain" value="@Model.SelectedJourney.JourneyExplain" />
    </div>
    <div class="mb-5">
        <div style="margin-bottom: 8px; font-weight: bold;">Destinations</div>
        @foreach (var destination in Model.RegisteredDestinations)
        {
            <div>
                <label>
                    <input type="checkbox"
                           name="destinationIds"
                           value="@destination.DestinationId"
                           @(Model.JourneyDestinations.Any(J => J.DestinationId == destination.DestinationId) ? "checked" : "") />
                    @destination.DestinationName
                </label>
            </div>
        }
    </div>
    <div style="display:flex; justify-content:space-between;" class="mt-3">
        <input type="submit" value="Update Journey" class="btn btn-light border border-1" />
        <a class="btn btn-light border border-1" href="/Journey/List/@Model.SelectedJourney.TravelerId">Go back to Journey List</a>
    </div>
    <div>
        
    </div>
</form>
