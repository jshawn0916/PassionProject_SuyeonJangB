@model IEnumerable<PassionProject_SuyeonJangB.Models.JourneyDto>
@{
    ViewBag.Title = "List";
}

<h2 style="margin-bottom:32px;">Journey List</h2>
<table class="border">
    <thead>
        <tr class="bg-light">
            <th style="padding:10px; width:80%;">JourneyName</th>
            <th style="padding:10px; width:80%;">Edit</th>
            <th style="padding:10px; width:80%;">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Journey in Model)
        {
            <tr>
                <td style="padding:10px; width:80%;">
                    <a style="text-decoration:none; color:black;" href="/Journey/Details/@Journey.JourneyId">@Journey.JourneyTitle</a>
                </td>
                <td style="padding:10px; width:80%;">
                    <a href="/Journey/Edit/@Journey.JourneyId" class="btn btn-primary">Edit</a>
                </td>
                <td style="padding:10px; width:80%;">
                    <a href="/Journey/DeleteConfirm/@Journey.JourneyId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="display:flex; justify-content:space-between;" class="mt-3">
    <a href="/Traveler/List" class="btn btn-light border border-1">Go back to Traveler List</a>
    <a href="/Journey/New/@ViewBag.TravelerId" class="btn btn-light border border-1">New Journey</a>
    
</div>

